                            <TextBlock FontWeight="Bold" Text="{Binding Path=Name}"/>
                            <LineBreak />
                            Age: <TextBlock Text="{Binding Path=Age}" />
                            <LineBreak />
                            Id :<TextBlock Text="{Binding Path=Id}" FontFamily="Courier New" />
                        </TextBlock>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>-->
